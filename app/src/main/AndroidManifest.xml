<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sale"
        tools:replace="android:icon"
        tools:targetApi="31">
        <activity
            android:name=".ui.activities.BaseActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.AddProductActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".ui.activities.AddMoreProductActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.TempActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.UpdatePaymentActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.PaymentDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.PaymentActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.NewProductActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.NewCustomerActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.ProductMasterActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.EnquiryActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.OrderListActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.OrderActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.CustomerActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.DashboardActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>